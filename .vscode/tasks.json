{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build: Full (Standard)",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "python",
                "tools/build.py",
                "--type",
                "full"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Build: Lite (No CV)",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "python",
                "tools/build.py",
                "--type",
                "lite"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Build: Release All (Full & Lite)",
            "dependsOn": [
                "Build: Full (Standard)",
                "Build: Lite (No CV)"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOrder": "sequence"
        }
    ]
}
