{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with nuitka",
            "type": "shell",
            "command": ".venv/Scripts/nuitka.cmd",
            "problemMatcher": [],
            "args": [
                "--standalone",
                "--python-flag=\"-S\"",
                "--include-module=\"comtypes.stream\"",
                "--include-package=\"sentry_sdk.integrations\"",
                "--follow-imports",
                // "--nofollow-import-to=\"cv2\"",
                "--output-dir=\"build\"",
                "--windows-console-mode=\"disable\"",
                "--windows-icon-from-ico=\"resources/EasiAuto.ico\"",
                "--company-name=\"HxAbCd\"",
                "--product-name=\"EasiAuto\"",
                "--product-version=\"1.1.0\"",
                "--enable-plugins=\"pyside6\"",
                "--main=\"main.py\"",
                "--include-data-dir=resources=resources",
                "--output-filename=\"EasiAuto.exe\"",
                "--msvc=\"latest\"",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        }
    ]
}
